{
  "name": "remix-tailwind",
  "version": "0.3.0",
  "description": "Use TailwindCSS with Remix without an extra build step!",
  "author": "itsMapleLeaf",
  "license": "MIT",
  "type": "module",
  "types": "dist/main.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "scripts": {
    "build": "tsup-node src/main.ts --clean --target node16 --format cjs,esm --dts",
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --verbose --forceExit",
    "release": "release-it",
    "prepublishOnly": "pnpm lint && pnpm test",
    "lint": "eslint --ext js,ts,tsx .",
    "lint-fix": "pnpm lint -- --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@remix-run/node": "^1.1.1",
    "@types/tailwindcss": "^2.2.4",
    "postcss-load-config": "^3.1.4"
  },
  "peerDependencies": {
    "postcss": ">=8",
    "tailwindcss": ">=2"
  },
  "devDependencies": {
    "@itsmapleleaf/configs": "^1.1.2",
    "@jest/types": "^27.4.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.5",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unicorn": "^39.0.0",
    "execa": "^6.0.0",
    "jest": "^27.4.5",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "release-it": "^14.11.8",
    "tailwindcss": "^3.0.7",
    "tsup": "^5.11.6",
    "typescript": "^4.5.4"
  },
  "tsup": {
    "target": "node16",
    "entryPoints": [
      "src/main.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true
  },
  "prettier": "@itsmapleleaf/configs/prettier",
  "eslintConfig": {
    "extends": [
      "./node_modules/@itsmapleleaf/configs/eslint"
    ],
    "ignorePatterns": [
      "**/test/fixtures/**",
      "**/node_modules/**",
      "**/dist/**"
    ]
  }
}
